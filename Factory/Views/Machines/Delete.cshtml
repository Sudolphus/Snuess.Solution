@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.HiddenFor(model => model.Name)
  <input type="submit" value="Confirm Delete" class="btn btn-alert" />
}

<p>@Html.ActionLink("Back Without Deleting", "Details", new { id = Model.MachineId })</p>