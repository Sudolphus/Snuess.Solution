@{
  Layout = "_Layout";
}

@using Factory.Models;
@model IEnumerable<Factory.Models.Machine>

<h2>Machines</h2>
@if (Model.Count() == 0)
{
  <p><i>No Machines in Database</i></p>
}
else
{
  <ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</li>
  }
  </ul>
}

<p>@Html.ActionLink("Add Machine", "Create")</p>